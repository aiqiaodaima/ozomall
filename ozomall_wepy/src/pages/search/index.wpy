</config>
<template>
  <div class="home">
    <div class="home-search">
      <div class="home-search-input">
        <div class="search-input-icon">
          <van-icon name="search" size="28rpx" />
        </div>
        <div class="search-input-input">
          <input
            class="weui-input"
            auto-focus
            type="text"
            confirm-type="search"
            placeholder="请输入商品名称"
            v-model="searchText"
            @confirm="search"
            @input="searchChange"
          />
        </div>
      </div>
    </div>
    <div class="home-container" v-if="disvible">
      <div class="home-hotSearch" v-if="searchText === ''">
        <div class="home-hotSearch-title">热门搜索</div>
        <div class="home-hotSearch-container">
          <div class="hotSearch-li" @tap="tapSearch('asdasdasdasd')">
            asdasdasdasd
          </div>
          <div class="hotSearch-li">asdasd阿三打撒撒旦asdasd</div>
          <div class="hotSearch-li">啊实打实打算</div>
          <div class="hotSearch-li">阿萨</div>
        </div>
        <div class="home-hotSearch-title">
          历史搜索
          <div class="title-icon">
            <van-icon name="delete" size="28rpx" />
          </div>
        </div>
        <div class="home-hotSearch-container">
          <div class="hotSearch-li">asdasdasdasd</div>
          <div class="hotSearch-li">asdasd阿三打撒撒旦asdasd</div>
          <div class="hotSearch-li">啊实打实打算</div>
          <div class="hotSearch-li">阿萨</div>
        </div>
      </div>
      <div class="home-searchList" v-else>
        <div class="searchList-item">kjhasd喀军队和</div>
      </div>
    </div>
    <div class="home-result" v-else>
      <div class="result-menu">
        <div class="menu-item">销量</div>
        <div class="menu-item">价格</div>
        <div class="menu-item">新品</div>
        <div class="menu-item">尺码</div>
      </div>
      <scroll-view
        class="scroll-view_H"
        scroll-y="true"
        style="height:{{scrollHeight}}rpx;"
        lower-threshold="50"
        bindscrolltolower="scrolltolower"
      >
        <prod-list :data="prodList"></prod-list>
      </scroll-view>
    </div>
  </div>
</template>

<script>
import wepy from '@wepy/core';
import { searchGoods } from '../../api/goods.js';

wepy.page({
  data: {
    disvible: true,
    timer: null,
    searchText: '',
    prodList: [],
    scrollHeight: 0,
    page: 0,
    size: 10,
    total: 0,
  },
  onLoad() {
    this.computedScroll();
  },
  methods: {
    // 计算scroll高度
    computedScroll() {
      let h = wx.getSystemInfoSync().windowHeight;
      console.log(wx.getSystemInfoSync().windowHeight);
      this.scrollHeight = (h - 87) * 2;
    },
    // 搜索事件
    search() {
      this.page = 0
      this.prodList = []
      this.searchGoods()
    },
    // 搜索方法
    searchGoods() {
      searchGoods({
        goodsName: this.searchText,
        del: 0,
        page: this.page,
        size: this.size,
      }).then((res) => {
        if (res.data.code === 1) {
          this.prodList = [...this.prodList, ...res.data.data.records];
          this.page = res.data.data.page;
          this.size = res.data.data.size;
          this.total = res.data.data.total;
          this.disvible = false;
        }
      });
    },
    // 滚动加载
    scrolltolower() {
      if (!this.timer) {
        this.page++;
        this.searchGoods();
        this.timer = setTimeout(() => {
          clearTimeout(this.timer);
          this.timer = null;
        }, 2000);
      } else {
        return false;
      }
    },
    searchChange(val) {
      console.log(this.searchText);
      this.disvible = true;
    },
    tapSearch(val) {
      this.searchText = val;
      this.disvible = false;
      this.search();
    },
  },
});
</script>
